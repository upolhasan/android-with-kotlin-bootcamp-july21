<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.AndroidStudyGuideJuly21" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/blue_500</item>
    <item name="colorPrimaryVariant">@color/blue_500_dark</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/amber_500</item>
    <item name="colorSecondaryVariant">@color/amber_500_dark</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    <item name="colorSurface">@color/blue_500_dark</item>
    <item name="colorOnSurface">@color/white</item>
    <item name="colorOnPrimarySurface">@color/white</item>

    <item name="backgroundColor">@color/gray_700</item>
  </style>
</resources>